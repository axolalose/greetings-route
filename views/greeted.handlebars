<body>
    <div class="row">
<h1>Actions</h1>

{{#if greeted}}

<table>
    <tr>
        <th>Name</th>
        <th>Language</th>
        <th>How much</th>
    </tr>
    {{#each greeted}}
    <tr>
        <td>{{name}}</td>
        <td>{{language}}</td>
        <td>{{counter}}</td>
    </tr>
    {{/each}}
</table>
{{else}}
<p>No data found</p>
{{/if}}

</div>

 
